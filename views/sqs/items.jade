doctype html
html
  include ../includes/bootstrap.jade
  script(src='/javascripts/sqs/sqs-items.js')
  body
    div(class="container-fluid")
      div(class="row")
        div(class="col-md-12")
          div(class="d-flex ml-3 mt-3 mb-3")
            a(href="/")= `AWS`
            span(class="ml-1 mr-1")= " / "
            a(href="/sqs")= `SQS`
            span(class="ml-1 mr-1")= " / "
            a(href="/sqs/#{queueName}/body")= queueName
      div(class="row mb-3")
        div(class="col-md-12")
          button(class="btn btn-success mr-2", onClick="setUrl('/sqs/#{queueName}/body')")= "Body"
          button(class="btn btn-primary ml-2", onClick="setUrl('/sqs/#{queueName}/full')")= "Full message"
      div(class="row")
        div(class="col-md-12")
          div(id="editor")
    script(src='/javascripts/sqs/sqs-items.js')
    script setJson(!{JSON.stringify(items)})